<%- layout('boilerplate') %>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Listed Courses</h2>
        <a href="/api/v1/admin/course" class="btn btn-success">Create Course</a>
    </div>
    <div class="row">
        <% courses.forEach(course => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="<%= course.imageUrl || 'https://images.shiksha.com/mediadata/ugcDocuments/images/wordpressImages/2022_08_MicrosoftTeams-image-13-2-1.jpg' %>" class="card-img-top" alt="<%= course.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= course.title %></h5>
                        <p class="card-text"><%= course.description %></p>
                        <p class="card-text"><strong>Price: </strong> $<%= course.price %></p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/api/v1/admin/course/<%= course._id %>" class="btn btn-primary">Edit Course</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
